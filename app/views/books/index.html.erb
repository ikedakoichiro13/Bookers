<h1>Books</h1>
<body>

  <p id="notice"></p>
  <% @books.each do |book| %>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a class="show" href="/books/:id">Show</a></td>
      <td><a class="edit" href="/books/:id/edit">Edit</a></td>
      <td><a class="destroy" href="/books/:id">Destroy</a></td>
    </tr>
  </tbody>
  </table>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
  
</body>