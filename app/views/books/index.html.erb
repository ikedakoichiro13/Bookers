<h1>Books</h1>
<body>

  <p id="notice"></p>

  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |book| %>

  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <% if book.present? %>
      <td><a class="show" href="<%= book_path(book.id) %>">Show</a></td>
      <td><a class="edit" href="<%= edit_book_path(book.id) %>">Edit</a></td>
      <td><a class="destroy" href="<%= book_path(book.id) %>" data-method="delete" data-confilm="Are you sure?">Destroy</a></td>
      <% end %>
    </tr>
  </tbody>
  </table>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

</body>